<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.alves.gastracker.IndexActivity"
    android:weightSum="1"
    android:background="@drawable/back3">

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/addbtn"
        android:textSize="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:id="@+id/listView"
        android:divider="#ff4081"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/monthTxt"
        android:layout_above="@+id/btnEdit" />

    <TextView
        android:id="@android:id/empty"
        android:layout_gravity="center"
        android:text="Nenhum abastecimento realizado"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MÃªs"
        android:id="@+id/monthTxt"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:layout_marginTop="30px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/arrowRight"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/arrow"
        android:textSize="100px"
        android:onClick="saveName"
        android:width="30px"
        android:height="50px"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/listView"
        android:layout_alignTop="@+id/monthTxt" />

    <Button
        android:id="@+id/arrowLeft"
        android:layout_width="100px"
        android:layout_height="100px"
        android:width="30px"
        android:height="50px"
        android:background="@drawable/arrowl"
        android:textSize="100px"
        android:onClick="saveName"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/listView"
        android:layout_alignTop="@+id/monthTxt" />

</RelativeLayout>
